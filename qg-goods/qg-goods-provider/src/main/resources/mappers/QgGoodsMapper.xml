<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "mybatis-3-mapper.dtd">
<mapper namespace="com.qg.mapper.goods.QgGoodsMapper">
    <select id="getQgGoodsById" resultType="QgGoods">
        select *
        from qg_goods
        where id=#{id}
    </select>

</mapper>